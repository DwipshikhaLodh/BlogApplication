<div class="form-group m-4">
    <label for="title">Title</label>
    <input value="<%= article.title %>" type="text" id="title" name="title" required class="form-control">
</div>

<div class="form-group m-4">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control" ><%= article.description %></textarea>
</div>

<div class="form-group m-4">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required ><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>